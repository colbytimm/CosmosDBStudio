<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:CosmosDBStudio.View.Controls">
    
    <Style TargetType="controls:TreeNodeControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TreeNodeControl">
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <Image Grid.Column="0" Width="16" Height="16" Source="{TemplateBinding Icon}" RenderOptions.BitmapScalingMode="NearestNeighbor" />
                        </BulletDecorator.Bullet>
                        <ContentPresenter />
                    </BulletDecorator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>