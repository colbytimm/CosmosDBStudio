<Window x:Class="CosmosDBStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosDBStudio"
        xmlns:v="clr-namespace:CosmosDBStudio.View"
        xmlns:vm="clr-namespace:CosmosDBStudio.ViewModel"
        mc:Ignorable="d"
        Title="Cosmos DB Studio" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <v:ConnectionsView Grid.Column="0" DataContext="{Binding Connections}" />
        
        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="5" />

        <TabControl Grid.Column="1"
                    ItemsSource="{Binding QuerySheets}"
                    SelectedItem="{Binding CurrentQuerySheet}"
                    DisplayMemberPath="Title">
            <TabControl.ContentTemplate>
                <DataTemplate DataType="vm:QuerySheetViewModel">
                    <v:QuerySheetView />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

    </Grid>
</Window>
