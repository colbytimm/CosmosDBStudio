<Window x:Class="CosmosDBStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosDBStudio"
        xmlns:v="clr-namespace:CosmosDBStudio.View"
        xmlns:vm="clr-namespace:CosmosDBStudio.ViewModel"
        xmlns:ctl="clr-namespace:CosmosDBStudio.View.Controls"
        mc:Ignorable="d"
        Title="Cosmos DB Studio" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <v:AccountsView Grid.Column="0" DataContext="{Binding Accounts}" />
        
        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="5" />

        <ctl:QuerySheetTabControl Grid.Column="1"
                    ItemsSource="{Binding QuerySheets}"
                    SelectedItem="{Binding CurrentQuerySheet}">
        </ctl:QuerySheetTabControl>

    </Grid>
</Window>
